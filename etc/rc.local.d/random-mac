#!/bin/sh -x
################################################################################
#
# Change MAC to random value
#
################################################################################


################################################################################
#	functions							       #
################################################################################
find_cards()
{
	cards="$(ip a|grep ^[0-9]|cut -d\: -f2|grep -v \ lo)"
}

change_mac()
{
	echo		${card}
	ifconfig	${card} down
	macchanger -r	${card}
	ifconfig	${card} up
}

################################################################################
#	main								       #
################################################################################
find_cards

for card in ${cards}
do
	change_mac
done


################################################################################
#	end of file							       #
################################################################################
