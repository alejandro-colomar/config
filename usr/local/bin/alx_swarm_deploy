#!/bin/bash
set -Eeuo pipefail;
########################################################################
#	Copyright (C) 2020        Alejandro Colomar Andres
#	SPDX-License-Identifier:  GPL-2.0-only
########################################################################

synopsis="${BASH_SOURCE[0]} [OPTION]... STACKNAME";

usage="\
Usage:  ${synopsis}
Try '${BASH_SOURCE[0]} -h' for more information.";

help="\
SYNOPSIS
	${synopsis}

DESCRIPTION
	Deploy docker swarm stack from <etc/docker/swarm/*.yaml>,
	using configs and secrets from <run/{configs,secrets}/PROJECT/>.

	Root permissions are required to copy files to /run.

OPTIONS
	-h	Print this help and exit.

	-v	Verbose output.

ERRORS
	EX_USAGE
		Invalid or missing arguments or options.

	EX_NOINPUT
		The directory <etc/docker/swarm/> does not exist.

	EX_NOPERM
		Not enough permissions.
";

EX_OK=0;
EX_USAGE=64;
EX_NOINPUT=66;

v='';
while getopts 'hk:v' opt; do
	case ${opt} in
	h)	echo "${help}";
		exit ${EX_OK};
		;;
	v)	v='-v';
		;;
	?)	>&2 echo "${usage}";
		exit ${EX_USAGE};
		;;
	esac;
done;
shift $((${OPTIND} - 1));

if [ $# -ne 1 ]; then
	>&2 echo "${usage}";
	exit ${EX_USAGE};
fi;
s="$1";

! [ -d etc/docker/swarm/ ] \
	&&exit ${EX_NOINPUT};

alx_containers_cp_configs "${v}";
alx_containers_cp_secrets "${v}";

docker stack deploy -c "etc/docker/swarm/compose.yaml" "${s}";

alx_containers_rm_secrets "${v}";
alx_containers_rm_configs "${v}";

exit ${EX_OK};
