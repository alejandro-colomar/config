#!/bin/bash
set -Eeuo pipefail;
########################################################################
#	Copyright (C) 2020        Alejandro Colomar Andres
#	SPDX-License-Identifier:  GPL-2.0-only
########################################################################

synopsis="${BASH_SOURCE[0]} [OPTION]...";

usage="\
Usage:  ${synopsis}
Try '${BASH_SOURCE[0]} -h' for more information.";

help="\
SYNOPSIS
	${synopsis}

DESCRIPTION
	Create secrets from <run/secrets/PROJECT/*>.

	Root permissions are required to copy files to /run.

OPTIONS
	-h	Print this help and exit.

	-p=PROJECT
		Use a specific project.  [ignored]

	-v	Verbose output.

ERRORS
	EX_USAGE
		Invalid or missing arguments or options.

	EX_NOINPUT
		No secrets were found.

	EX_NOPERM
		Not enough permissions.
";

EX_OK=0;
EX_USAGE=64;

v='';
while getopts 'hp:v' opt; do
	case ${opt} in
	h)	echo "${help}";
		exit ${EX_OK};
		;;
	p)	p="${OPTARG}";
		;;
	v)	v='-v';
		;;
	?)	>&2 echo "${usage}";
		exit ${EX_USAGE};
		;;
	esac;
done;
shift $((${OPTIND} - 1));

if [ $# -ne 0 ]; then
	>&2 echo "${usage}";
	exit ${EX_USAGE};
fi;

alx_kube_create_secrets -k 'oc';

exit ${EX_OK};
